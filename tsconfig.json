{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./lib",
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["es7", "dom"],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "lib"]
}
